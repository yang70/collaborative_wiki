<h1><%= @topic.title %></h1>

<% if current_user.present? %>
  <%= link_to 'Edit', edit_topic_path %> |
  <%= link_to 'Delete', @topic, method: :delete, data: { confirm: 'Are you sure you want to delete this topic?' } %>
<% end %>

<p><%= @topic.body %></p>

<p>This topic has been edited by the following users, starting with most recent:</p>
<table>
  <tr>
    <th>User</th>
    <th>Link</th>
  </tr>
  <% @topic.users.reverse.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= link_to 'View', author_path(user) %></td>
    </tr>
  <% end %>
</table>
